# Voice Gateway Environment Variables

# Service
SERVICE_NAME=voice_gateway
SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO

# AssemblyAI (Speech-to-Text)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# TTS Provider Selection
TTS_PROVIDER=elevenlabs  # Options: elevenlabs, cartesia

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Cartesia AI (Text-to-Speech)
CARTESIA_API_KEY=your_cartesia_api_key_here
CARTESIA_VOICE_ID=6ccbfb76-1fc6-48f7-b71d-91ac6298247b

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_EXCHANGE=vos_exchange

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=vos_database

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_QUEUE_SIZE=100

# Session
SESSION_TIMEOUT=300
MAX_AUDIO_CHUNK_SIZE=1048576

# AssemblyAI Settings (optional - defaults are set in config.py)
# ASSEMBLYAI_SAMPLE_RATE=16000
# ASSEMBLYAI_FORMAT_TURNS=true
# ASSEMBLYAI_INTERIM_RESULTS=true

# ElevenLabs Settings
ELEVENLABS_MODEL=eleven_turbo_v2
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.75
ELEVENLABS_STYLE=0.0

# Cartesia Settings
CARTESIA_MODEL=sonic-3
CARTESIA_VERSION=2024-06-10
CARTESIA_OUTPUT_FORMAT=wav
CARTESIA_ENCODING=pcm_f32le
CARTESIA_SAMPLE_RATE=44100
