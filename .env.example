# ==========================================
# VOS ENVIRONMENT CONFIGURATION
# ==========================================

# Sentry Configuration
# Get your DSN from https://sentry.io after creating a project
SENTRY_DSN=https://YOUR_KEY@us.sentry.io/YOUR_PROJECT_ID

# Optional: Set release version for tracking deployments
RELEASE_VERSION=1.0.0

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Configuration
# Options: DEBUG (very verbose), INFO (default), WARNING (minimal), ERROR (errors only)
LOG_LEVEL=INFO

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# Authentication Configuration
API_KEYS=CHANGE_ME_generate_with_openssl_rand_hex_32
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_64
VALID_USERS=CHANGE_ME_username:CHANGE_ME_password

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1,api_gateway

# ==========================================
# DATABASE CREDENTIALS (REQUIRED)
# ⚠️ MUST CHANGE IN PRODUCTION!
# ==========================================

POSTGRES_USER=vos_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=vos_database

# ==========================================
# RABBITMQ CREDENTIALS (REQUIRED)
# ⚠️ MUST CHANGE IN PRODUCTION!
# ==========================================

RABBITMQ_USER=vos_user
RABBITMQ_PASSWORD=CHANGE_ME_IN_PRODUCTION
RABBITMQ_VHOST=vos_vhost

# ==========================================
# WEAVIATE CREDENTIALS (REQUIRED)
# ⚠️ MUST CHANGE IN PRODUCTION!
# ==========================================

WEAVIATE_API_KEY=CHANGE_ME_IN_PRODUCTION

# ==========================================
# LLM API KEYS
# ==========================================

# Google Gemini API Key (for primary_agent)
GEMINI_API_KEY=your_gemini_api_key_here

# Weather API Key (for weather_agent if using external service)
WEATHER_API_KEY=your_weather_api_key_here

# ==========================================
# EXTERNAL SERVICE API KEYS
# ==========================================

# OpenWeatherMap API Key (for weather_agent)
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# Firecrawl API Key (for search_agent)
# Get your API key from https://firecrawl.dev
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================

# Prometheus Metrics
ENABLE_METRICS=true

# ==========================================
# AGENT CONFIGURATION
# ==========================================

# Memory Management
MAX_CONVERSATION_MESSAGES=0
PRIMARY_AGENT_MAX_CONVERSATION_MESSAGES=20
WEATHER_AGENT_MAX_CONVERSATION_MESSAGES=10
SEARCH_AGENT_MAX_CONVERSATION_MESSAGES=15

# Message History Retrieval Limit (how many messages to load from DB per cycle)
# Controls how many past messages the agent retrieves from the database
# Higher values = more context but slower loading
MESSAGE_HISTORY_RETRIEVAL_LIMIT=500
PRIMARY_AGENT_MESSAGE_HISTORY_RETRIEVAL_LIMIT=500
WEATHER_AGENT_MESSAGE_HISTORY_RETRIEVAL_LIMIT=200
SEARCH_AGENT_MESSAGE_HISTORY_RETRIEVAL_LIMIT=200